<%- include('partials/header') %>
<main>
  <section class="stories_section">
    <h2>Submit Your Story</h2>
    <form action="/stories" method="POST" class="story_form">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <label for="content">Content:</label>
      <textarea id="content" name="content" required></textarea>
      <button type="submit">Submit Story</button>
    </form>

    <h2>Our Stories</h2>
    <div class="stories_grid">
      <% stories.forEach(story => { %>
        <div class="story_card">
          <div class="story_left">
            <div class="story_author_card">
              <p>A story by: <%= story.author.username %></p>
              <a href="/profile/<%= story.author._id %>">See profile</a>
            </div>
          </div>
          <div class="story_right">
            <h3><%= story.title %></h3>
            <p><%= story.content %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
