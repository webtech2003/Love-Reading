<%- include('partials/header') %>
<main>
  <section class="suggestions_section">
    <h2>Submit Your Suggestion</h2>
    <form action="/suggestions" method="POST" class="suggestion_form">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <label for="description">Author/Description:</label>
      <textarea id="description" name="description" required></textarea>
      <button type="submit">Submit Suggestion</button>
    </form>

    <h2>Our Suggestions</h2>
    <div class="suggestions_grid">
      <% suggestions.forEach(suggestion => { %>
        <div class="suggestion_card">
          <div class="suggestion_left">
            <div class="suggestion_author_card">
              <p>Suggested by: <%= suggestion.author.username %></p>
              <a href="/profile/<%= suggestion.author._id %>">See profile</a>
            </div>
          </div>
          <div class="suggestion_right">
            <h3><%= suggestion.title %></h3>
            <p><%= suggestion.description %> </p>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
